<odoo>

    <template id="candidate_exam" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
        <t t-if="env.user.has_group('bes.group_institute')">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">GP Batches</t>
                <t t-set="url" t-value="'/my/gpbatch'"/>
            </t>
        </t>
        <t t-if="env.user.has_group('bes.group_institute')">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">CCMC Batches</t>
                <t t-set="url" t-value="'/my/ccbatch'"/>
            </t>
        </t>
        </xpath>
    </template>


</odoo>
