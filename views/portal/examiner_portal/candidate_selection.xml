<odoo>
    <template id="examiner_candidate_list" name="Candidates">
        <script>
                                    $(document).ready(function () {
                                        $('#uploadBtn').on('click', function () {
                                            // Show the overlay and loader when the upload button is clicked
                                            $('#loader-overlay').show();
                                        });
                                    });
        </script>
        <style>
                                /* CSS to style the loader and overlay */
                                    #loader-overlay {
                                        display: none;
                                        position: fixed;
                                        top: 0;
                                        left: 0;
                                        width: 100%;
                                        height: 100%;
                                        background: rgba(0, 0, 0, 0.5); /* Semi-transparent black background */
                                        z-index: 9999; /* Adjust the z-index to appear over other elements */
                                    }

                                    #loader {
                                        position: absolute;
                                        top: 50%;
                                        left: 50%;
                                        transform: translate(-50%, -50%);
                                        /* Additional styling for the loader itself */
                                        /* Adjust as needed */
                                    }
        </style>

        <t t-call="portal.portal_layout">
            
            <t t-call="portal.portal_table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Institute</th>
                        <th>Indos No</th>
                        <th>Roll No</th>
                        


                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="candidate" t-as="c">
                        <tr>
                            <td class="text-left">
                                <t t-out="c.name" />
                            </td>
                            <td class="text-left">
                                <t t-out="c.institute_id.name" />
                            </td>
                            <td class="text-left">
                                <t t-out="c.indos_no" />
                            </td>
                            <td class="text-left">
                                <t t-out="c.roll_no" />
                            </td>
                            

                        </tr>
                    </t>

                </tbody>
            </t>
        </t>
    </template>
</odoo>