<odoo>
    <template id="examiner_assignment_list" name="Assignments">
        <script>
                                    $(document).ready(function () {
                                        $('#uploadBtn').on('click', function () {
                                            // Show the overlay and loader when the upload button is clicked
                                            $('#loader-overlay').show();
                                        });
                                    });
        </script>
        <style>
                                /* CSS to style the loader and overlay */
                                    #loader-overlay {
                                        display: none;
                                        position: fixed;
                                        top: 0;
                                        left: 0;
                                        width: 100%;
                                        height: 100%;
                                        background: rgba(0, 0, 0, 0.5); /* Semi-transparent black background */
                                        z-index: 9999; /* Adjust the z-index to appear over other elements */
                                    }

                                    #loader {
                                        position: absolute;
                                        top: 50%;
                                        left: 50%;
                                        transform: translate(-50%, -50%);
                                        /* Additional styling for the loader itself */
                                        /* Adjust as needed */
                                    }
        </style>

        <t t-call="portal.portal_layout">
            <t t-foreach="assignments" t-as="assignment">
                <t t-if="assignment.subject_id.name == 'GSK'">
                    <a href="" style="margin-top: 10px; margin-bottom: 20px;" data-toggle="modal" t-attf-batch-id="{{batch_id}}" onclick="openUploadModal(this)" data-target="#uploadCandidateModal" class="btn btn-primary btn_cta">Upload GSK Marksheet</a>
                    <a href="/open_candidate_form/download_gsk_marksheet" style="margin-top: 10px; margin-bottom: 20px;" class="btn btn-primary btn_cta">Download GSK Marksheet</a>
                </t>
                <t t-if="assignment.subject_id.name == 'MEK'">
                    <a href="" style="margin-top: 10px; margin-bottom: 20px;" data-toggle="modal" t-attf-batch-id="{{batch_id}}" onclick="openUploadModal(this)" data-target="#uploadCandidateModal" class="btn btn-primary btn_cta">Upload MEK Marksheet</a>
                    <a href="/open_candidate_form/download_mek_marksheet" style="margin-top: 10px; margin-bottom: 20px;" class="btn btn-primary btn_cta">Download MEK Marksheet</a>
                </t>
            </t>
            <!-- <a href="/open_candidate_form/download_gsk_marksheet" style="margin-top: 10px; margin-bottom: 20px;" class="btn btn-primary btn_cta">Download Marksheet</a> -->
            <t t-call="portal.portal_table">
                
                <thead>
                    <tr>
                        <th class="text-left">Batch</th>
                        <th class="text-left">Action</th>

                    </tr>
                </thead>
                <tbody>
                    
                    <t t-foreach="batches" t-as="batch">
                        <tr>
                            <td class="text-left">
                                <t t-out="batch.batch_name" />
                            </td>
                            <td class="text-left">
                               <a t-attf-href="/my/assignments/batches/{{batch.id}}">View</a>
                            </td>
                        </tr>
                    </t>

                </tbody>
            </t>
        </t>
    </template>


    <template id="examiner_assignment_institute_list" name="Institutes">
        <script>
                                    $(document).ready(function () {
                                        $('#uploadBtn').on('click', function () {
                                            // Show the overlay and loader when the upload button is clicked
                                            $('#loader-overlay').show();
                                        });
                                    });
        </script>
        <style>
                                /* CSS to style the loader and overlay */
                                    #loader-overlay {
                                        display: none;
                                        position: fixed;
                                        top: 0;
                                        left: 0;
                                        width: 100%;
                                        height: 100%;
                                        background: rgba(0, 0, 0, 0.5); /* Semi-transparent black background */
                                        z-index: 9999; /* Adjust the z-index to appear over other elements */
                                    }

                                    #loader {
                                        position: absolute;
                                        top: 50%;
                                        left: 50%;
                                        transform: translate(-50%, -50%);
                                        /* Additional styling for the loader itself */
                                        /* Adjust as needed */
                                    }
        </style>

        <t t-call="portal.portal_layout">
           <t t-call="portal.portal_table">
                
                <thead>
                    <tr>
                        <th class="text-left">Institute</th>
                        <th class="text-left">Exam Date</th>
                        <th class="text-left">No of Candidates</th>
                        <th class="text-left">Action</th>

                    </tr>
                </thead>
                <tbody>
                    
                    <t t-foreach="assignments" t-as="assignment">
                        <tr>
                            <td class="text-left">
                                <t t-out="assignment.prac_oral_id.institute_id.name" />
                            </td>
                            <td class="text-left">
                                <t t-out="assignment.exam_date" />
                            </td>
                            <td class="text-left">
                                <t t-out="len(assignment.marksheets)" />
                            </td>
                            <td class="text-left">
                               <a t-attf-href="/my/assignments/batches/candidates/{{batch}}">View</a>
                            </td>
                        </tr>
                    </t>

                </tbody>
            </t>
        </t>
    </template>


    <template id="examiner_assignment_candidate_list" name="Candidates">
        <script>
                                    $(document).ready(function () {
                                        $('#uploadBtn').on('click', function () {
                                            // Show the overlay and loader when the upload button is clicked
                                            $('#loader-overlay').show();
                                        });
                                    });
        </script>
        <style>
                                /* CSS to style the loader and overlay */
                                    #loader-overlay {
                                        display: none;
                                        position: fixed;
                                        top: 0;
                                        left: 0;
                                        width: 100%;
                                        height: 100%;
                                        background: rgba(0, 0, 0, 0.5); /* Semi-transparent black background */
                                        z-index: 9999; /* Adjust the z-index to appear over other elements */
                                    }

                                    #loader {
                                        position: absolute;
                                        top: 50%;
                                        left: 50%;
                                        transform: translate(-50%, -50%);
                                        /* Additional styling for the loader itself */
                                        /* Adjust as needed */
                                    }
        </style>

        <t t-call="portal.portal_layout">
           <t t-call="portal.portal_table">
                <t t-if="examiner.subject_id.name == 'GSK'">
                    <a href="" style="margin-top: 10px; margin-bottom: 20px;" data-toggle="modal" t-attf-batch-id="{{batch_id}}" onclick="openUploadModal(this)" data-target="#uploadCandidateModal" class="btn btn-primary btn_cta">Upload GSK Marksheet</a>
                    <a href="/open_candidate_form/download_gsk_marksheet" style="margin-top: 10px; margin-bottom: 20px;" class="btn btn-primary btn_cta">Download GSK Marksheet</a>
                </t>
                <t t-if="examiner.subject_id.name == 'MEK'">
                    <a href="" style="margin-top: 10px; margin-bottom: 20px;" data-toggle="modal" t-attf-batch-id="{{batch_id}}" onclick="openUploadModal(this)" data-target="#uploadCandidateModal" class="btn btn-primary btn_cta">Upload MEK Marksheet</a>
                    <a href="/open_candidate_form/download_mek_marksheet" style="margin-top: 10px; margin-bottom: 20px;" class="btn btn-primary btn_cta">Download MEK Marksheet</a>
                </t>
                <thead>
                    <tr >
                        <th class="text-left">Candidate Name</th>
                        <th class="text-left">Indos No</th>
                        <th class="text-left">Course</th>
                        <th t-if="examiner.subject_id.name == 'GSK'" class="text-left">Gsk Oral</th>
                        <th t-if="examiner.subject_id.name == 'GSK'" class="text-left">Gsk Practical</th>
                        <th t-if="examiner.subject_id.name == 'MEK'" class="text-left">MEK Oral</th>
                        <th t-if="examiner.subject_id.name == 'MEK'" class="text-left">MEK Practical</th>
                        <th t-if="examiner.subject_id.name == 'CCMC'" class="text-left">CCMC Oral</th>
                        <th t-if="examiner.subject_id.name == 'CCMC'" class="text-left">CCMC Practical</th>




                    </tr>
                </thead>
                <tbody>
                    
                    <t t-foreach="assignments" t-as="assignment">
                        <tr>
                            <td class="text-left">
                                <t t-if="assignment.examiner.subject_id.name == 'GSK'" t-out="assignment.marksheets.gp_candidate.name" />
                                <t t-if="assignment.examiner.subject_id.name == 'MEK'" t-out="assignment.marksheets.gp_candidate.name" />
                                <t t-if="assignment.examiner.subject_id.name == 'CCMC'" t-out="assignment.marksheets.ccmc_candidate.name" />

                            
                            </td>
                            <td class="text-left">
                                <t t-if="assignment.examiner.subject_id.name == 'GSK'" t-out="assignment.marksheets.gp_candidate.indos_no" />
                                <t t-if="assignment.examiner.subject_id.name == 'MEK'" t-out="assignment.marksheets.gp_candidate.indos_no" />
                                <t t-if="assignment.examiner.subject_id.name == 'CCMC'" t-out="assignment.marksheets.ccmc_candidate.indos_no" />
                            </td>
                            <td  class="text-left">
                                <t t-out="assignment.prac_oral_id.course.name" />
                            </td>

                            <td t-if="assignment.examiner.subject_id.name == 'GSK'" class="text-left">
                                <a t-attf-href="/open_gsk_oral_form?rec_id={{ assignment.marksheets.gp_candidate.id }}&amp;gsk_oral={{ assignment.marksheets.gsk_oral.id }}&amp;assignment_id={{assignment.id}}&amp;batch_id={{batch_id}}"><span>GSK Oral</span></a>
                            </td>
                            <td t-if="assignment.examiner.subject_id.name == 'GSK'" class="text-left">
                                <a t-attf-href="/open_gsk_practical_form?rec_id={{ assignment.marksheets.gp_candidate.id }}&amp;gsk_practical={{ assignment.marksheets.gsk_prac.id }}&amp;assignment_id={{assignment.id}}&amp;batch_id={{batch_id}}" ><span>GSK Practical</span></a>
                            </td>
                            <td t-if="assignment.examiner.subject_id.name == 'MEK'" class="text-left">
                                <a t-attf-href="/open_mek_oral_form?rec_id={{ assignment.marksheets.gp_candidate.id }}&amp;mek_oral={{ assignment.marksheets.mek_oral.id }}&amp;assignment_id={{assignment.id}}&amp;batch_id={{batch_id}}" ><span>MEK Oral</span></a>
                            </td>
                            <td t-if="assignment.examiner.subject_id.name == 'MEK'" class="text-left">
                                <a t-attf-href="/open_practical_mek_form?rec_id={{ assignment.marksheets.gp_candidate.id }}&amp;mek_practical={{ assignment.marksheets.mek_prac.id }}&amp;assignment_id={{assignment.id}}&amp;batch_id={{batch_id}}" ><span>MEK Practical</span></a>
                            </td>
                            <td t-if="assignment.examiner.subject_id.name == 'CCMC'" class="text-left">
                                <a t-attf-href="/open_ccmc_oral_form?rec_id={{ assignment.marksheets.ccmc_candidate.id }}&amp;ccmc_oral={{ assignment.marksheets.ccmc_oral.id }}&amp;assignment_id={{assignment.id}}&amp;batch_id={{batch_id}}" ><span>CCMC Oral</span></a>
                            </td>
                            <td t-if="assignment.examiner.subject_id.name == 'CCMC'" class="text-left">
                                <a t-attf-href="/open_cookery_bakery_form?rec_id={{ assignment.marksheets.ccmc_candidate.id }}&amp;cookery_bakery={{ assignment.marksheets.cookery_bakery.id }}&amp;assignment_id={{assignment.id}}&amp;batch_id={{batch_id}}" ><span>CCMC Practical</span></a>
                            </td>
                            
                        </tr>
                    </t>

                </tbody>
            </t>
        </t>
    </template>
</odoo>