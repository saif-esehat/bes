                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='create_date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='email']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='attempts_number']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='test_entry']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="optional">hide</attribute>
                </xpath>

                <!-- <xpath expr="//field[@name='scoring_success']" position="replace">
                    <field name="scoring_success" string="Exam Pass" />
                </xpath> -->
            </field>
        </record>


        <record id="survey_form_inherited_tree" model="ir.ui.view">
            <field name="name">survey.survey.view.tree.inherited</field>
            <field name="model">survey.survey</field>
            <field name="inherit_id" ref="survey.survey_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='sequence']" position="after">
                    <field name="q_no" />
                </xpath>
            </field>
        </record>

        <record id="survey_questions_inherited" model="ir.ui.view">
            <field name="name">survey.question.view.form.inherited</field>
            <field name="model">survey.question</field>
            <field name="inherit_id" ref="survey.survey_question_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="before">
                    <label for="q_no" />
                    <field name="q_no" />
                    <!-- <field name="computed_sequence" /> -->
                </xpath>
                <xpath expr="//field[@name='title']" position="after">
                    <field name="difficulty_level" />
                </xpath>
            </field>
        </record>


        <record id="view_survey_question_section_form" model="ir.ui.view">
            <field name="name">survey.question.section.form</field>
            <field name="model">survey.question.section</field>
            <field name="arch" type="xml">
                <form string="My Wizard">
                    <sheet>
                        <group>
                            <field name="qb" readonly="1"/>
                            <field name="chapter" string="Chapter"
                                domain="[('survey_id', '=', qb), ('is_page', '=', True)]"/>
                            <field name="upload_type"/>
                            <field name="description" attrs="{'invisible': [('upload_type', '=', 'bulk')]}"/>
                            <field name="marks" attrs="{'invisible': [('upload_type', '=', 'single')]}"/>
                            <field name="file" filename="filename" attrs="{'invisible': [('upload_type', '=', 'single')]}"/>
                            <field name="filename" invisible="1"/>
                            <field name="delete_prev_ques" attrs="{'invisible': [('upload_type', '=', 'single')]}"/>
                        </group>
                        <group>
                            <p attrs="{'invisible': [('upload_type', '=', 'single')]}">
                                <strong style="color: red;">Note: </strong> 
                                If "Delete Previous Questions" is selected as yes then all previous questions in the selected chapter will be deleted.
                            </p>
                        </group>
                        <group attrs="{'invisible': [('upload_type', '=', 'single')]}">   
                            <span style="font-size: 18px;">
                                Click the button below to download the excel or the word upload format
                                <div style="font-size: 18px; display: flex; gap: 20px; margin: 10px 0;">
                                    <a href="https://bestrust.in//document/share/13/8b4b7ebc-b553-496d-9ea1-26dcb25db1f0"
                                    target="_blank"
                                    style="text-decoration: none;">
                                        <button style="background-color: #4CAF50; /* Green */
                                                    border: none;
                                                    color: white;
                                                    padding: 10px 20px;
                                                    text-align: center;
                                                    text-decoration: none;
                                                    display: inline-block;
                                                    font-size: 16px;
                                                    margin: 4px 2px;
                                                    cursor: pointer;
                                                    border-radius: 5px;">
                                            Download Excel Format
                                        </button>
                                    </a>
                                    
                                    <a href="https://bestrust.in//document/share/14/4faa695e-507d-4dd3-9a7b-1582ce1bdcfe"
                                    target="_blank"
                                    style="text-decoration: none;">
                                        <button style="background-color: #2196F3; /* Blue */
                                                    border: none;
                                                    color: white;
                                                    padding: 10px 20px;
                                                    text-align: center;
                                                    text-decoration: none;
                                                    display: inline-block;
                                                    font-size: 16px;
                                                    margin: 4px 2px;
                                                    cursor: pointer;
                                                    border-radius: 5px;">
                                            Download Word Format
                                        </button>
                                    </a>
                                </div>
                            </span>
                        </group>

                        <footer>
                            <button string="Add" type="object" name="action_add_question" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_survey_question_section_form_action" model="ir.actions.act_window">
            <field name="name">Add Question</field>
            <field name="res_model">survey.question.section</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <report
        id="action_report_survey_pdf"
        model="survey.survey"
        string="Exam Questions"
        report_type="qweb-pdf"
        name="bes.report_survey_pdf"
        file="bes.report_survey_pdf"
       />

        <record id="question_delete_wizard_form" model="ir.ui.view">
            <field name="name">question.delete.wizard.form</field>
            <field name="model">question.delete.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Delete">
                    <group>
                        <field name="question_name" />
                        <!-- <field name="chapter" /> -->
                        <p class="o_form_label">Are you sure you want to delete this question?</p>
                    </group>
                    <footer>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                        <button name="action_delete_question" type="object" string="Delete" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>




    </data>



</odoo>