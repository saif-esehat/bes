            <xpath expr="//div[@class='o_survey_finished mt32 mb32']" position="replace">
                <!-- Your custom content here -->
                <h1>Thank you!</h1>
                <div t-field="survey.description_done" class="oe_no_empty" />
                <!-- <span t-esc="request.env.user.name"/> -->
