                        <a role="button" class="btn btn-primary btn-lg" t-att-href="exam_url">

                            <i role="img"/>
                                Start <span class="font-weight-bold" t-esc="survey.trigger_exam.title"/> Exam
                        </a>
                    </t>

                </div>
            </xpath>
        </template>

    

