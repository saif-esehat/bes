        <record id="gp_candidate_kanban" model="ir.ui.view">
            <field name="name">gp.candidate.kanban</field>
            <field name="model">gp.candidate</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="id"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
