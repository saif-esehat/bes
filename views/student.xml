<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="candidate_action" model="ir.actions.act_window">
            <field name="name">Candidate</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bes.candidate</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Candidate</p>
            </field>
        </record>


        <record id="candidate_form" model="ir.ui.view">
            <field name="name">bes.candidate.form</field>
            <field name="model">bes.candidate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="open_attendance" string="Attendance" type="object" class="oe_stat_button" icon="fa-align-justify">
                            </button>
                            <button name="open_stcw" string="STCW Certificates" type="object" class="oe_stat_button" icon="fa-align-justify">
                            </button>
                            <!-- <button name="open_ship_visits" string="Ship Visits" type="object" class="oe_stat_button" icon="fa-align-justify">
                            </button> -->
                        </div>
                        <group style="width:100%;">
                            <h1>
                                <field name="name" placeholder="Candidate" required="1"/>
                            </h1>
                        </group>
                        
                        <group style="width:100%;">
                            <field name="institute_batch_id"/>
                            <field name="indos_no"/>
                            <field name="candidate_code"/>
                            <field name="roll_no"/>
                        </group>
                          
                        <group>
                            <group>
                                <span class="o_form_label o_td_label">
                                    <b>Address</b>
                                </span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street" />
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city" />
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" />
                                </div>
                            </group>
                            <group >
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="email"/>
                                <field name="dob"/>
                            </group>
                        </group>
                        <group style="width:50%;">
                            <field name="tenth_percent"/>
                            <field name="twelve_percent"/>
                        </group>
                        <group style="width:50%;">
                            <field name="iti_percent"/>
                            <field name="sc_st"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="candidate_attendance_form" model="ir.ui.view">
            <field name="name">candidate.attendance.form</field>
            <field name="model">candidate.attendance</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group style="width:100%;">
                            <field name="candidate_id" />
                            <!-- <field name="compliance_1" style="margin-bottom:10px; margin-top: 15px;"/>
                            <field name="compliance_2" style="margin-top: 14px;" /> -->
                        </group>
                  
                            <label for="compliance_1" />
                            <div>
                                <field name="compliance_1" />
                            </div>

                             <label for="compliance_2" />
                            <div>
                                <field name="compliance_2" />
                            </div>
                       
                    </sheet>
                </form>
            </field>
        </record>


        <record id="stcw_form" model="ir.ui.view">
            <field name="name">candidate.stcw.certificate.form</field>
            <field name="model">candidate.stcw.certificate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="candidate_id" invisible="1"/>
                        <group style="width:50%;">
                            <field name="pst_certifcate"/>
                        </group>
                        <group style="width:50%;">
                            <field name="pst_document_file" attrs="{'invisible': [('pst_certifcate', '=', False)],'required': [('pst_certifcate', '=', True)]}"/>
                        </group>
                        <group style="width:50%;">
                            <field name="efa_certifcate"/>
                        </group>
                        <group style="width:50%;">
                            <field name="efa_document_file" attrs="{'invisible': [('efa_certifcate', '=', False)],'required': [('efa_certifcate', '=', True)]}"/>
                        </group>
                        <group style="width:50%;">
                            <field name="fpff_certifcate"/>
                        </group>
                        <group style="width:50%;">
                            <field name="fpff_document_file" attrs="{'invisible': [('fpff_certifcate', '=', False)],'required': [('fpff_certifcate', '=', True)]}"/>
                        </group>
                        <group style="width:50%;">
                            <field name="pssr_certifcate"/>
                        </group>
                        <group style="width:50%;">
                            <field name="pssr_document_file" attrs="{'invisible': [('pssr_certifcate', '=', False)],'required': [('pssr_certifcate', '=', True)]}"/>
                        </group>
                        <group style="width:50%;">
                            <field name="stsdsd_certifcate"/>
                        </group>
                        <group style="width:50%;">
                            <field name="stsdsd_document_file" attrs="{'invisible': [('stsdsd_certifcate', '=', False)],'required': [('stsdsd_certifcate', '=', True)]}"/>
                        </group>
                        <field name="other_certificates"/>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="candidate_ship_visits_form" model="ir.ui.view">
            <field name="name">candidate.ship.visits.form</field>
            <field name="model">candidate.ship.visits</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="candidate_id"/>
                        </group>
                        <group>
                            <field name="name_of_ships"/>
                            <field name="imo_no"/>
                            <field name="name_of_ports_visited"/>
                            <field name="date_of_visits"/>
                            <field name="time_spent_on_ship"/>
                            <field name="bridge"/>
                            <field name="eng_room"/>
                            <field name="cargo_area"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="candidate_ship_visits_tree" model="ir.ui.view">
            <field name="name">candidate.ship.visits.form</field>
            <field name="model">candidate.ship.visits</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name_of_ships"/>
                    <field name="imo_no"/>
                    <field name="name_of_ports_visited"/>
                    <field name="date_of_visits"/>
                    <field name="time_spent_on_ship"/>
                    <field name="bridge"/>
                    <field name="eng_room"/>
                    <field name="cargo_area"/>
                </tree>
            </field>
        </record>




    </data>
</odoo>