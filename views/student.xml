        <record id="gp_candidate_form" model="ir.ui.view">
            <field name="name">gp.candidate.form</field>
            <field name="model">gp.candidate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="elligiblity_criteria" invisible="1"/>
                        <widget name="web_ribbon" title="Elligible" bg_color="bg-success" attrs="{'invisible': [('elligiblity_criteria', '=', 'not_elligible')]}"/>
                        <widget name="web_ribbon" title="Not Elligible" bg_color="bg-danger" attrs="{'invisible': [('elligiblity_criteria', '=', 'elligible')]}"/>
                        
                        <div class="oe_button_box" name="button_box">
                            <!-- <button name="open_attendance" string="Attendance" type="object" class="oe_stat_button" icon="fa-align-justify">
                            </button> -->
                            <!-- <button name="open_ship_visits" string="Ship Visits" type="object" class="oe_stat_button" icon="fa-align-justify">
                            </button> -->
                        </div>

                        <field name="candidate_image" widget="image" class="oe_avatar" />
                        <div class="oe_title mb24">

                            <h1>
                                <field class="text-break" name="name" default_focus="1" placeholder="Candidate Name "/>
                            </h1>

                        </div>
                        <group style="width:100%;">
                            <field name="candidate_code"/>
                        </group>

                        <group style="width:100%;">

                            <field name="roll_no"/>
                            <!-- <field name="name" placeholder="Candidate" required="1"/> -->
                            <field name="institute_id"/>
                            <field name="indos_no"/>
                            <field name="dob"/>
                            <field name="age"/>

                        </group>

                        <group>
                            <group>
                                <span class="o_form_label o_td_label">
                                    <b>Address</b>
                                </span>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street" />
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city" />
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" />
                                </div>
                            </group>
                            <group >
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="email"/>
                            </group>
                        </group>

                        <group style="width:100%;">
                            <field name="institute_batch_id"/>
                        </group>


                        <group style="width:50%;">
                            <field name="qualification"/>
                            <field name="tenth_percent" attrs="{'invisible': [('qualification', '!=', 'tenth')] , 'required':[('qualification', '=', 'tenth')] }"/>
                            <field name="twelve_percent" attrs="{'invisible': [('qualification', '!=', 'twelve')], 'required':[('qualification', '=', 'twelve')] }"/>
                            <field name="iti_percent"  attrs="{'invisible': [('qualification', '!=', 'iti')], 'required':[('qualification', '=', 'iti')]}"/>
                            <field name="sc_st"/>
                            <field name="candidate_attendance_record"/>
                        </group>

                        <notebook>
                            <page string="Ship Visits">
                                <field name="ship_visits"/>
                            </page>
                            <page string="Attendance">
                                <label for="attendance_compliance_1" />
                                <div>
                                    <field name="attendance_compliance_1"/>
                                </div>
                                <label for="attendance_compliance_2" />
                                <div>
                                    <field name="attendance_compliance_2"/>
                                </div>
                            </page>
                            <!-- <page string="Ship Visits">
                                    <field name="ship_visits"/>
                            </page> -->
                            <page string="STCW Certificate">
                                <field name="stcw_certificate" nolabel="1">
                                    <tree editable="bottom">
                                        <!-- <field name='candidate_id'/> -->
                                        <field name='course_name'/>
                                        <field name="institute_name"/>
                                        <field name='marine_training_inst_number'/>
                                        <field name="mti_indos_no"/>

                                        
                                        <field name="candidate_cert_no"/>
                                        <field name="certificate_upload" widget="binary" filename="file_name"/>
                                        <field name="file_name" invisible="1"/>

                                        <field name="course_start_date"/>
                                        <field name="course_end_date"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="MEK Practical">
                                <field name="mek_practical_child_line" nolabel="1">
                                    <tree>                                  
                                        <field name='using_hand_plumbing_tools_task_1'/>
                                        <field name="using_hand_plumbing_tools_task_2"/>
                                        <field name='using_hand_plumbing_tools_task_3'/>
                                        <field name="use_of_chipping_tools_paint_brushes"/>

                                        <field name="use_of_carpentry"/>
                                        <field name="use_of_measuring_instruments"/>
                                        <field name="welding"/>
                                        <field name="lathe"/>
                                        <field name="electrical"/>
                                        <field name="mek_practical_total_marks"/>
                                        <field name="mek_practical_remarks"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="MEK Oral">
                                <field name="mek_oral_child_line" nolabel="1">
                                    <tree>                                     
                                        <field name='using_hand_plumbing_carpentry_tools'/>
                                        <field name="use_of_chipping_tools_paints"/>
                                        <field name='welding'/>
                                        <field name="lathe_drill_grinder"/>

                                        <field name="electrical"/>
                                        <field name="journal"/>
                                        <field name="mek_oral_remarks"/>
                                        <field name="mek_oral_total_marks"/>                                      
                                    </tree>
                                </field>
                            </page>

                            <page string="GSK Practical">
                                <field name="gsk_practical_child_line" nolabel="1">
                                    <tree>                                   
                                        <field name='climbing_mast'/>
                                        <field name="buoy_flags_recognition"/>
                                        <field name='bosun_chair'/>
                                        <field name="rig_stage"/>

                                        <field name="rig_pilot"/>
                                        <field name="rig_scaffolding"/>
                                        <field name="fast_ropes"/>
                                        <field name="knots_bend"/>
                                        <field name="sounding_rod"/>
                                        <field name="gsk_practical_total_marks"/>
                                        <field name="gsk_practical_remarks"/>                                       
                                    </tree>
                                </field>
                            </page>

                            <page string="GSK Oral">
                                <field name="gsk_oral_child_line" nolabel="1">
                                    <tree>              
                                        <field name='subject_area_1'/>
                                        <field name="subject_area_2"/>
                                        <field name='subject_area_3'/>
                                        <field name="subject_area_4"/>

                                        <field name="subject_area_5"/>
                                        <field name="subject_area_6"/>
                                        <field name="practical_record_journals"/>
                                        <field name="gsk_oral_total_marks"/>
                                        <field name="gsk_oral_remarks"/>
                                    </tree>
                                </field>
                            </page>
                            
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


