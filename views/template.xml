<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="sub_menu" model="website.menu">
		<field name="name">Candidate</field>
		<field name="url">/candidate</field>
		<field name="parent_id" ref="website.main_menu"/>
		<field name="sequence" type="int">21</field>
	</record>


	<template id="candidate_thankyou">
		<style>
			.form-start {padding:20px;background:#85c440;margin:10% auto 0;max-width:400px;border-radius:10px;}
			.form-start h1 {margin-bottom:15px;}
			.form-start p, .form-start span {font-size: 20px;line-height: 25px;}
		</style>
		<t t-call="website.layout">
			<div id="wrap" class="oe_structure oe_empty">
				<section class="s_text_block pt40 pb40 o_colored_level" data-snippet="s_text_block" data-name="Text" style="background-image: none;">
					<div class="s_allow_columns container">
						<div class="form-start">
							<h1 style="text-align: center;">
								<strong>Thank you.</strong>
							</h1>

						</div>
					</div>
				</section>
			</div>
		</t>
	</template>

	<template name="Candidate" t-name="bes.candidate_entry_page">
		<style>

			button.btn-black {background: #000;border:1px  solid #000;color: #fff;}
			button.btn-black:hover {background: #fff;color: #000;border:1px solid #000;}
			.btn-wrap{margin: 250px 200px;width: 400px;}
			.red-text{color:red;}
			.form-start {padding:20px;background:#85c440;margin:10% auto 0;max-width:400px;border-radius:10px;}
			.form-start label {padding:5px 0; display:block;color:#000;}
			.form-start div.error  {display:block}
			.form-start #visitor_submit {margin-top:20px;}
			}
		</style>
		<t t-call="website.layout">
			<div id="wrap">
				<div class="oe_structure">
					<div class="container">
						<table class="table table-bordered">
							<form role="form" id="candidate_form" action="/candidate" method="POST">
								<input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
								<div class="form-start" style="margin-inline: auto;">
									<div class="form-group">
										
										

										<label for="candidate_code" class="control-lable">Candidate Code No</label>
										<input type="number" id="candidate_code" autocomplete="off" name="candidate_code"  class="form-control" required="required"/>
										
										<label for="roll_no" class="control-lable">Roll No</label>
										<input type="number" id="roll_no" autocomplete="off" name="roll_no"   class="form-control" required="required"/>
										<label for="full_name_of_candidate" class="control-lable">Full Name Of Candidate As In INDOS</label>
										<input type="text" id="full_name_of_candidate" autocomplete="off" name="full_name_of_candidate"   class="form-control" required="required"/>
										<label for="indos_no" class="control-lable">Indos No</label>
										<input type="number" id="indos_no" autocomplete="off" name="indos_no"   class="form-control" required="required"/>
										<label for="dob" class="control-lable">DOB</label>
										<input type="date" id="dob" autocomplete="off" name="dob"   class="form-control" required="required"/>
										<label for="age" class="control-lable">Age</label>
										<input type="number" id="age" autocomplete="off" name="age"   class="form-control" required="required"/>
										<label for="phone" class="control-lable">Phone</label>
										<input type="tel" id="phone" autocomplete="off" name="phone"   class="form-control" required="required"/>
										<label for="mobile" class="control-lable">Mobile</label>
										<input type="tel" id="phone" autocomplete="off" name="mobile"   class="form-control" required="required"/>
										<label for="email" class="control-lable">Email</label>
										<input type="text" id="email" autocomplete="off" name="email"   class="form-control" required="required"/>
										<label for="tenth_percent" class="control-lable">10th %</label>
										<input type="number" id="tenth_percent" autocomplete="off" name="tenth_percent"   class="form-control" required="required"/>
										<label for="twelfth_percent" class="control-lable">12th %</label>
										<input type="number" id="twelfth_percent" autocomplete="off" name="twelfth_percent"   class="form-control" required="required"/>
										<label for="iti_percent" class="control-lable">ITI %</label>
										<input type="number" id="iti_percent" autocomplete="off" name="iti_percent"   class="form-control" required="required"/>



										

										
									</div>
									<div class="form-group">
										<button type="submit" id="visitor_submit" class="btn btn-primary btn-black">Submit</button>
									</div>

								</div>
							</form>
						</table>
					</div>
				</div>
			</div>
		</t>
	</template>
				

</odoo>
