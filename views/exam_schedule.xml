<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Exam Schedule -->
        


        <record id="bes_gp_exam_action" model="ir.actions.act_window">
            <field name="name">GP Exam</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">gp.exam.schedule</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_exam_region':1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">GP Exam</p>
            </field>
        </record>
        
        <record id="bes_ccmc_exam_action" model="ir.actions.act_window">
            <field name="name">CCMC Exam</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ccmc.exam.schedule</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_group_by_exam_region':1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">CCMC Exam</p>
            </field>
        </record>

        <record model="ir.ui.view" id="gp_exam_schedul_search">
            <field name="name">gp.exam.schedule.search</field>
            <field name="model">gp.exam.schedule</field>
            <field name="arch" type="xml">
                <search>
                    <searchpanel>
                        <field name="dgs_batch"/>
                        <field name="exam_region"/>
                    </searchpanel>
                    <group expand="0" string="Group By">
                        <filter name="group_by_exam_region" string="Exam Region" context="{'group_by':'exam_region'}" />
                        <filter name="group_by_registered_institute" string="Examination Center" context="{'group_by':'registered_institute'}" />
                    </group>
                    <field name="gp_candidate"/>
                    <field name="candidate_code"/>
                    <field name="indos_no"/>
                    <field name="institute_id"/>
                    <field name="exam_region"/>
                    <field name="dgs_batch"/>
                </search>
            </field>
        </record>        



         <record id="certificate_reissue_approval_wizard_form" model="ir.ui.view">
            <field name="name">certificate.reissue.approval.wizard.form</field>
            <field name="model">certificate.reissue.approval.wizard</field>
            <field name="arch" type="xml">
                <form>

                       
                        <group width="100%">
                            <field name="marksheet_type" readonly="1"/>
                            <field name="candidate_image" widget="image" class="oe_avatar" />
                            <field name="candidate_signature" widget="image" class="oe_avatar" />
                        </group>
                        <group width="100%">
                            <field name="name" />
                            <field name="dob"/>
                        </group>
                       


                    <footer>
                        <button string="Edit" type="object" class="oe_highlight" name="edit_info"/>
                    </footer>                    
                </form>
            </field>
        </record>

        <record id="candidate_integrity_violation_wizard_form" model="ir.ui.view">
            <field name="name">candidate.integrity.violation.wizard.form</field>
            <field name="model">candidate.integrity.violation.wizard</field>
            <field name="arch" type="xml">
                <form string="Report Integrity Violation">
                    <group>
                        <field name="incident_details"/>
                        <field name="attachment_ids"  widget="many2many_binary"/>
                    </group>
                    <footer>
                        <button string="Confirm" type="object" name="action_log_note" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>



        <record id="gp_exam_schedule_form" model="ir.ui.view">
            <field name="name">gp.exam.schedule.form</field>
            <field name="model">gp.exam.schedule</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="HoldAdmitCard" string="Hold Admit Card" type="object" class="btn-primary"
                        attrs="{'invisible': ['|', ('state', '!=', '1-in_process'), ('hold_admit_card', '=', True)]}"/>
                        <!-- "Release Admit Card" Button -->
                        <button name="ReleaseAdmitCard" string="Release Admit Card" type="object" class="btn-primary"
                        attrs="{'invisible': ['|', ('state', '!=', '1-in_process'), ('hold_admit_card', '=', False)]}"/>
                        <!-- "Hold Certificate" Button -->
                        <button name="HoldCertificate" string="Hold Certificate" type="object" class="btn-primary" 
                        attrs="{'invisible': ['|', ('state', '!=', '3-certified'), ('hold_certificate', '=', True)]}"/>
                        <!-- "Release Certificate" Button -->
                        <button name="ReleaseCertificate" string="Release Certificate" type="object" class="btn-primary" 
                        attrs="{'invisible': ['|', ('state', '!=', '3-certified'), ('hold_certificate', '=', False)]}"/>


                        <button name="dgs_approval" string="DGS Approval" type="object" class="btn-primary" attrs="{'invisible': [('dgs_visible', '=', False)]}"/>
                        <button name="move_done" string="Confirm" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', '1-in_process'),]}"/>
                        <button name="send_certificate_email" string="Send Certificate" type="object" attrs="{'invisible': [('state', '!=', '3-certified')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="1-in_process,2-done"/>
                        
                        <button name="open_reissue_wizard" string="Reissue Certificate" attrs="{'invisible': [('state', '!=', '6-pending_reissue_approved')]}" type="object" class="btn-primary"/>
                        <button name="reissue_approved" string="Approve" attrs="{'invisible': [('state', '!=', '5-pending_reissue_approval')]}" type="object" class="btn-primary"/>
                        <button name="reissue_approval" string="Reissue Approval" attrs="{'invisible': [('state', '!=', '3-certified')]}" type="object" class="btn-primary"/>
                        <button string="Report Violation" groups="bes.group_report_violation" type="object" name="report_integrity_violation"  attrs="{'invisible': [('exam_violation_state', '!=', 'na')]}" class="btn-primary"/>
                        <button string="Approve Violation" groups="bes.group_approve_violation" type="object" confirm="Are you sure you want to Approve the Violation ? The candidate will be Inactivated" name="approve_violation"  attrs="{'invisible': [('exam_violation_state', '!=', 'pending_approval')]}" class="btn-primary"/>

                    </header>
                    <sheet>
                        <group>
                            <field name="exam_id" readonly="1"/>
                            <field name="institute_code" readonly="1"/>
                            <field name="registered_institute" readonly="1"/>
                            <field name="exam_region" readonly="1"/>
                            <field name="institute_id" readonly="1"/>
                             <field name="exam_violation_state" invisible="1"/>
                             <field name="absent_status" invisible="1"/>
                             
                            
                            <field name="reissued" readonly="1"/>
                            <field name="reissued_date" attrs="{'invisible': [('reissued', '=', False)]}" />
                            <field name="hold_admit_card" readonly='1' />
                            <field name="hold_certificate" readonly='1' />
                            
                            <field name="dgs_batch" readonly="1"/>
                            <field name="gp_candidate" readonly="1"/>
                            <field name="candidate_code" readonly="1"/>
                            <field name="indos_no" readonly="1"/>
                            <field name="institute_name" invisible="1" />
                        </group>
                        <group>
                            <field name="attempt_number"/>
                        </group>                        
                        <group style="width:50%">
                        
                            <field name="mek_oral"/>
                             <field name="gsk_oral"/>
                        </group>
                        <group style="width:50%">
                            <field name="mek_prac"/>
                            <field name="gsk_prac"/>
                        </group>
                        <group style="width:50%">
                            <field name="gsk_online"/>
                        </group>
                        <group style="width:50%">
                            <field name="mek_online"/>
                            <div style="display:flex">
                                <h1>Attendance</h1>
                            </div>
                        </group>

                        <group style="width:100%">
                            <group style="width:50%">
                                <label for="gsk_practical_marks"/>
                                <div>
                                    <field name="gsk_practical_marks" nolabel="1"/>
                                / 
                                    <span>100</span>
                                </div>

                                <label for="mek_practical_marks"/>
                                <div>
                                    <field name="mek_practical_marks" nolabel="1"/>
                                / 
                                    <span>100</span>
                                </div>

                                <label for="gsk_oral_marks"/>
                                <div>
                                    <field name="gsk_oral_marks" nolabel="1"/>
                                / 
                                    <span>75</span>
                                </div>

                                <label for="mek_oral_marks"/>
                                <div>
                                    <field name="mek_oral_marks" nolabel="1"/>
                                / 
                                    <span>75</span>
                                </div>
                            </group>


                            <group style="width:50%">
                                <!-- <div style="display:flex">
                                    <span>Attendance</span>
                                </div> -->
                                <label for="gsk_oral_prac_attendance"/>
                                <div>
                                    <field name="gsk_oral_prac_attendance" nolabel="1"/>
                                </div>

                                <label for="gsk_online_attendance"/>
                                <div>
                                    <field name="gsk_online_attendance" nolabel="1"/>
                                </div>

                                <label for="mek_oral_prac_attendance"/>
                                <div>
                                    <field name="mek_oral_prac_attendance" nolabel="1"/>
                                </div>

                                <label for="mek_online_attendance"/>
                                <div>
                                    <field name="mek_online_attendance" nolabel="1"/>
                                </div>
                            </group>
                        </group>
                        
                        <!-- <group style="width:50%">

                        </group>       -->

                        <group style="width:50%">
                        
                            <label for="gsk_total"/>
                            <div>
                                <field name="gsk_total" nolabel="1"/>
                            / 
                                <span>175</span>
                            </div>
                      
                            <label for="mek_total"/>
                            <div>
                                <field name="mek_total" nolabel="1"/>
                            / 
                                <span>175</span>
                            </div>
                            <label for="mek_online_marks"/>
                            <div>
                                <field name="mek_online_marks" nolabel="1"/>
                            / 
                                <span>75</span>
                            </div>
                            <label for="gsk_online_marks"/>
                            <div>
                                <field name="gsk_online_marks" nolabel="1"/>
                            / 
                                <span>75</span>
                            </div>
                            <label for="overall_marks"/>
                            <div>
                                <field name="overall_marks" nolabel="1"/>
                            / 
                                <span>500</span>
                            </div>
                      
                        </group>
                        <group style="width:50%">
                            <field name="gsk_percentage" readonly="1"/>
                            <field name="mek_percentage" readonly="1"/>
                            <field name="mek_online_percentage" readonly="1"/>
                            <field name="gsk_online_percentage" readonly="1"/>
                            <field name="overall_percentage" readonly="1"/>
                        </group>
                        <group style="width:100%" invisible="1">
                            <field name="gsk_oral_prac_carry_forward" readonly="1"/>
                            <field name="mek_oral_prac_carry_forward" readonly="1"/>
                            <field name="mek_online_carry_forward" readonly="1"/>
                            <field name="gsk_online_carry_forward" readonly="1"/>
                        </group>
                        <group style="width:100%" >
                            <div>
                                <p><strong>Note:</strong> <span style="color: orange;"> Subject Passed status in light blue color indicate that marks are carry forwarded from previous attempted Marksheet</span></p>
                            </div>


                        </group>
                        <group style="width:50%">
                        
                            <field name="edit_marksheet_status" invisible="1" />
                            <field name="gsk_oral_prac_status"  decoration-info="gsk_oral_prac_carry_forward == True" attrs="{'readonly': [('edit_marksheet_status', '!=', True)]}" />
                            <field name="mek_oral_prac_status"  decoration-info="mek_oral_prac_carry_forward == True" attrs="{'readonly': [('edit_marksheet_status', '!=', True)]}" />
                            <field name="mek_online_status"  decoration-info="mek_online_carry_forward == True" attrs="{'readonly': [('edit_marksheet_status', '!=', True)]}" />
                            <field name="gsk_online_status"  decoration-info="gsk_online_carry_forward == True" attrs="{'readonly': [('edit_marksheet_status', '!=', True)]}"/>
                            <field name="exam_criteria" readonly="1"/>
                            <field name="stcw_criterias" readonly="1"/>
                            <field name="attendance_criteria" readonly="1"/>
                            <field name="ship_visit_criteria" readonly="1"/>
                            <field name="certificate_criteria" readonly="1"/>
                            <field name="certificate_id" readonly="1" attrs="{'invisible': [('state', '!=', '2-done'), ('certificate_criteria', '!=', 'passed')]}"/>
                            <field name="exam_pass_date" attrs="{'invisible': [('state', '!=', '3-certified')]}" />
                            <field name="certificate_issue_date" attrs="{'invisible': [('state', '!=', '3-certified')]}" />
                            <field name="rank" readonly="1" attrs="{'invisible': [('state', '!=', '3-certified')]}" />
                        </group>
                        <group style="width:50%">
                            <field name="url" invisible="1"/>
                            <field name="qr_code" widget="image"  style="width:100px; height:100px;"/>
                            <field name="certificate_qr_code" widget="image"  style="width:100px; height:100px;" attrs="{'invisible': [('state', '!=', '3-certified')]}"/>
                        </group>
                        <field name="dgs_visible" invisible="0"/>
                        

                        <notebook>
                            <page string="Attempting Exam List" >
                                <field name="attempting_exam_list" readonly="1">
                                    <tree editable="bottom">
                                        <field name="subject_name" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        
                    </sheet>
                    <div class="oe_chatter">
                
                        <field name= "message_ids" widget="mail_thread"/>
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name= "activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="gp_exam_schedule_tree" model="ir.ui.view">
            <field name="name">gp.exam.schedule.tree</field>
            <field name="model">gp.exam.schedule</field>
            <field name="arch" type="xml">

                <tree>
                    <header>
                        <button name="open_marksheet_wizard" string="Add Marksheet" type="object"/>
                        <button name="action_open_gp_admit_card_release_wizard" string="Release Admit Card" type="object" class="oe_highlight"/>
                    </header>
                    <field name="exam_id" optional="show"/>
                     <field name="institute_code" force_save="1" optional="show"/>
                    <field name="exam_violation_state" optional="show"/>
                    <field name="gp_candidate" optional="show"/>
                    <field name="candidate_code" optional="show"/>
                    <field name="registered_institute" readonly="1" optional="show"/>
                    <field name="exam_region" readonly="1" optional="show"/>
                    <field name="institute_id" optional="show"/>
                    <field name="attempt_number" optional="show"/>

                    <field name="attempting_gsk_oral_prac" optional="hide"/>
                    <field name="attempting_mek_oral_prac" optional="hide"/>
                    <field name="attempting_mek_online" optional="hide"/>
                    <field name="attempting_gsk_online" optional="hide"/>

                    <field name="gsk_oral_marks" optional="show" string="GSK Oral"/>
                    <field name="gsk_practical_marks"  optional="show"  string="GSK Practical"/>
                    <field name="gsk_total" optional="show" string="GSK P&amp;O Total" decoration-warning="attempting_gsk_oral_prac"/>
                   
                    <field name="mek_oral_marks" optional="show"  string="MEK Oral"/>
                    <field name="mek_practical_marks" optional="show" string="MEK Practical"/>
                    <field name="mek_total" optional="show" string="MEK P&amp;O Total" decoration-warning="attempting_mek_oral_prac"/>

                    <field name="gsk_online_marks" optional="show" decoration-warning="attempting_gsk_online"/>
                    <field name="mek_online_marks" optional="show" decoration-warning="attempting_mek_online"/>

             


                    <field name="overall_marks" optional="show"/>
                    <field name="exam_criteria" optional="show"/>
                    <field name="stcw_criterias"  optional="show" widget="badge" decoration-success= "stcw_criterias == 'passed'" decoration-danger="stcw_criterias == 'pending'"/>
                    <field name="attendance_criteria"  optional="show" widget="badge" decoration-success= "attendance_criteria == 'passed'" decoration-danger="attendance_criteria == 'pending'"/>
                    <field name="ship_visit_criteria"  optional="show" widget="badge" decoration-success= "ship_visit_criteria == 'passed'" decoration-danger="ship_visit_criteria == 'pending'"/>
                    <field name="absent_status"/>
                    <!-- <field name="stcw_criteria" optional="show"/>
                    <field name="attendance_criteria" optional="show"/>
                    <field name="ship_visit_criteria" optional="show"/> -->
                    <field name="certificate_criteria" optional="show"/>
                    
                    <field name="rank" optional="show"/>
                    <field name="user_state" optional="show" widget="badge" decoration-success= "user_state == 'active'"  decoration-danger= "user_state == 'inactive'"/>
                    <field name="candidate_image_status" optional="show" widget="badge" decoration-success= "candidate_image_status == 'done'"  decoration-danger= "candidate_image_status == 'pending'"/>
                    <field name="candidate_signature_status" optional="show" widget="badge" decoration-success= "candidate_signature_status == 'done'"  decoration-danger= "candidate_signature_status == 'pending'"/>
                    <field name="result" string="Result Status" decoration-success= "result == 'passed'"  decoration-danger= "result == 'failed'" widget="badge" optional="show"/>
                    <field name="result_status" string="Certificate Status" widget="badge" decoration-success= "result_status == 'passed'"  decoration-danger= "result_status == 'failed'" optional="show"/>
                    
                    <field name="state" optional="show"/>
                </tree>
            </field>
        </record>

