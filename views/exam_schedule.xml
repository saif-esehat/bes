        <record id="action_gp_admit_card_release" model="ir.actions.act_window">
            <field name="name">Release GP Admit Card</field>
            <field name="res_model">gp.admit.card.release</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <record id="view_release_admit_card_form" model="ir.ui.view">
            <field name="name">release.admit.card.form</field>
            <field name="model">gp.admit.card.release</field>
            <field name="arch" type="xml">
                <form string="Release GP Admit Card">
                    <sheet>
                        <group>
                            <field name="admit_card_type"/>
                            <field name="exam_region" options="{'no_create':True}"/>
                        </group>
                        <!-- <group>
                            <field name="candidates_count" readonly="1"/>
                            <field name="result_message" readonly="1" widget="text"/>
                        </group> -->
                        <footer>
                            <button name="release_gp_admit_card" string="Generate Admit Card" type="object" class="oe_highlight"/>
