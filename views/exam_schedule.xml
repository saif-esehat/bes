        <record id="ccmc_exam_schedule_form" model="ir.ui.view">
            <field name="name">ccmc.exam.schedule.form</field>
            <field name="model">ccmc.exam.schedule</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- "Hold Admit Card" Button -->
                        <button name="HoldAdmitCard" string="Hold Admit Card" type="object" class="btn-primary"
                        attrs="{'invisible': ['|', ('state', '!=', '1-in_process'), ('hold_admit_card', '=', True)]}"/>

                        <!-- "Release Admit Card" Button -->
                        <button name="ReleaseAdmitCard" string="Release Admit Card" type="object" class="btn-primary"
                        attrs="{'invisible': ['|', ('state', '!=', '1-in_process'), ('hold_admit_card', '=', False)]}"/>

                        <button name="HoldCertificate" string="Hold Certificate" type="object" class="btn-primary" 
                        attrs="{'invisible': ['|', ('state', '!=', '3-certified'), ('hold_certificate', '=', True)]}"/>
                        <!-- "Release Certificate" Button -->
                        <button name="ReleaseCertificate" string="Release Certificate" type="object" class="btn-primary" 
                        attrs="{'invisible': ['|', ('state', '!=', '3-certified'), ('hold_certificate', '=', False)]}"/>

                       <button name="dgs_approval" string="DGS Approval" type="object" class="btn-primary" attrs="{'invisible': [('dgs_visible', '=', False)]}"/>
                        <button name="move_done" string="Confirm" type="object" class="btn-primary" attrs="{'invisible': [('state', '!=', '1-in_process'),]}"/>
                        <button name="send_certificate_email" string="Send Certificate" type="object" attrs="{'invisible': [('state', '!=', '3-certified')]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="1-in_process,2-done"/>
                        
                        <button name="open_reissue_wizard" string="Reissue Certificate" attrs="{'invisible': [('state', '!=', '6-pending_reissue_approved')]}" type="object" class="btn-primary"/>
                        <button name="reissue_approved" string="Approve" attrs="{'invisible': [('state', '!=', '5-pending_reissue_approval')]}" type="object" class="btn-primary"/>
                        <button name="reissue_approval" string="Reissue Approval" attrs="{'invisible': [('state', '!=', '3-certified')]}" type="object" class="btn-primary"/>
                        <button string="Report Violation" type="object" name="report_integrity_violation"  attrs="{'invisible': [('exam_violation_state', '!=', 'na')]}" class="btn-primary"/>
                        <button string="Approve Violation" type="object" confirm="Are you sure you want to Approve the Violation ? The candidate will be Inactivated" name="approve_violation"  attrs="{'invisible': [('exam_violation_state', '!=', 'pending_approval')]}" class="btn-primary"/>

 
                    </header>
                    <sheet>
                        <group>
                            <field name="exam_id" readonly="1"/>
                            <field name="institute_code"  force_save="1"/>
                            <field name="registered_institute" readonly="1"/>
                            <field name="exam_region" readonly="1"/>
                            <field name="institute_id"/>
                            <field name="exam_violation_state" invisible="1"/>

                            <field name="reissued"/>                            
                            <field name="reissued_date"/>
                            <field name="hold_admit_card" readonly='1' />
                            <field name="hold_certificate" readonly='1' />
                            
                            <field name="dgs_batch" readonly="1"/>
                            <field name="ccmc_candidate" readonly="1"/>
                            <field name="candidate_code" readonly="1"/>
                            <field name="indos_no" readonly="1"/>
                            <field name="institute_name" invisible="1" />
                            <!-- <field name="roll_no" readonly="1"/> -->
                        </group>
                        <group>
                            <field name="attempt_number"/>
                        </group>                        
                        <group style="width:50%">
                            <field name="cookery_bakery"/>
                            <field name="ccmc_oral"/>
                            <field name="ccmc_gsk_oral"/>
                            <field name="ccmc_online"/>
                        </group>
                        
                        <group style="width:50%">
                        
                            <label for="cookery_practical"/>
                            <div>
                                <field name="cookery_practical" nolabel="1"/>
                            / 
                                <span>100</span>
                            </div>
                      
                            <label for="cookery_oral"/>
                            <div>
                                <field name="cookery_oral" nolabel="1"/>
                            / 
                                <span>100</span>
                            </div>

                            <label for="cookery_gsk_online"/>
                            <div>
                                <field name="cookery_gsk_online" nolabel="1"/>
                            / 
                                <span>100</span>
                            </div>
                            <!-- <label for="ccmc_gsk_oral_marks"/>
                            <div>
                                <field name="ccmc_gsk_oral_marks" nolabel="1"/>
                            / 
                                <span>20</span>
                            </div> -->
                            <label for="overall_marks"/>
                            <div>
                                <field name="overall_marks" nolabel="1"/>
                            / 
                                <span>300</span>
                            </div>
                      
                        </group>
                        <group style="width:50%">
                            <field name="cookery_bakery_percentage" readonly="1"/>
                            <field name="ccmc_oral_percentage" readonly="1"/>
                            <field name="cookery_gsk_online_percentage" readonly="1"/>
                            <!-- <field name="ccmc_gsk_oral_percentage" readonly="1"/> -->
                            
                            <field name="overall_percentage" readonly="1"/>
                        </group>

                        <group style="width:33.33%">
                            <field name="cookery_bakery_prac_status" attrs="{'readonly': [('edit_marksheet_status', '!=', True)]}" />
                            <field name="ccmc_oral_prac_status" attrs="{'readonly': [('edit_marksheet_status', '!=', True)]}"/>
                            <!-- <field name="ccmc_gsk_oral_prac_status" attrs="{'readonly': [('edit_marksheet_status', '!=', True)]}"/> -->
                            <!-- <field name="oral_prac_status"/> -->
                            <field name="edit_marksheet_status" invisible="1" />                            
                            <field name="ccmc_online_status" attrs="{'readonly': [('edit_marksheet_status', '!=', True)]}"/>
                            <field name="stcw_criteria" readonly="1"/>
                            <field name="ship_visit_criteria" readonly="1"/>
                            <field name="attendance_criteria" readonly="1"/>
                            <field name="exam_criteria" readonly="1"/>
                            <field name="certificate_criteria" readonly="1"/>
                            <field name="certificate_id" readonly="1" attrs="{'invisible': [('state', '!=', '2-done'), ('certificate_criteria', '!=', 'passed')]}"/>
                            <field name="exam_pass_date" attrs="{'invisible': [('state', '!=', '3-certified')]}" />
                            <field name="certificate_issue_date" readonly="0" attrs="{'invisible': [('state', '!=', '3-certified')]}" />
                            <field name="ccmc_rank" readonly="1" attrs="{'invisible': [('state', '!=', '3-certified')]}" />
                        </group>
                        <group style="width:50%">
                            <field name="url" invisible="1"/>
                            <field name="qr_code" widget="image"  style="width:100px; height:100px;"/>
                            <field name="certificate_qr_code" widget="image"  style="width:100px; height:100px;" attrs="{'invisible': [('state', '!=', '3-certified')]}"/>
                        </group>
                        <field name="dgs_visible" invisible="0"/>
                        <div class="oe_chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name= "message_ids" widget="mail_thread"/>
                            <field name= "activity_ids" widget="mail_activity"/>
                        </div>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name= "message_ids" widget="mail_thread"/>
                        <field name= "activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="ccmc_exam_schedule_tree" model="ir.ui.view">
            <field name="name">ccmc.exam.schedule.tree</field>
            <field name="model">ccmc.exam.schedule</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="exam_id"/> 
                    <field name="attempt_number"/> 
                    <field name="institute_code"/> 
                    <field name="exam_violation_state" optional="show"/>
                    <field name="ccmc_candidate"/>
                    <field name="candidate_code"/>
                    <field name="registered_institute"/>
                    <field name="exam_region"/>
                    <field name="institute_id"/>
                    <field name="cookery_practical"/> 
                    <field name="cookery_oral"/> 
                    <field name="cookery_gsk_online"/>                    
                    <field name="overall_marks"/>
                    <field name="exam_criteria"/>
                    <field name="certificate_criteria"/>
                    <field name="ccmc_rank"/> 
                    <field name="user_state"  widget="badge" decoration-success= "user_state == 'active'"  decoration-danger= "user_state == 'inactive'"/>
                    <field name="candidate_image_status" optional="show" widget="badge" decoration-success= "candidate_image_status == 'done'"  decoration-danger= "candidate_image_status == 'pending'"/>
                    <field name="candidate_signature_status" optional="show" widget="badge" decoration-success= "candidate_signature_status == 'done'"  decoration-danger= "candidate_signature_status == 'pending'"/>
                    <field name="absent_status"/> 
                    <field name="result" string="Result Status" decoration-success= "result == 'passed'"  decoration-danger= "result == 'failed'" widget="badge" optional="show"/>
                    <field name="result_status" string="Certificate Status" widget="badge" decoration-success= "result_status == 'passed'"  decoration-danger= "result_status == 'failed'" optional="show"/>
                    <field name="state" widget="badge" optional="show" />
                </tree>
            </field>
        </record>

       <record model="ir.ui.view" id="ccmc_exam_schedul_search">
            <field name="name">ccmc.exam.schedule.search</field>
            <field name="model">ccmc.exam.schedule</field>
            <field name="arch" type="xml">
                <search >
                   <searchpanel>
                        <field name="dgs_batch"/>
                        <field name="exam_region"/>
                    </searchpanel>
                    <group expand="0" string="Group By">
                        <filter name="group_by_exam_region" string="Exam Region" context="{'group_by':'exam_region'}" />
                        <filter name="group_by_registered_institute" string="Examination Center" context="{'group_by':'registered_institute'}" />

                    </group>
                    <field name="exam_id"/>
                    <field name="ccmc_candidate"/>
                    <field name="candidate_code"/>
                    <field name="institute_id"/>
                </search>
            </field>
        </record>



        <record id="exam_candidate_batches" model="ir.ui.view">
            <field name="name">exam.schedule.bes.candidate.form</field>
            <field name="model">exam.schedule.bes.candidate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button string="MEK Oral Marksheet" attrs="{'invisible': [('mek_visiblity', '=', False)]}" name="open_mek_oral_sheet" type="object" class="oe_stat_button" icon="fa-align-justify">
                            </button>
                            <button string="MEK Practical Marksheet" attrs="{'invisible': [('mek_visiblity', '=', False)]}" name="open_mek_practical_sheet" type="object" class="oe_stat_button" icon="fa-align-justify">
                            </button>
                            <button string="GSK Oral Marksheet" name="open_gsk_oral_sheet" attrs="{'invisible': [('gsk_visiblity', '=', False)]}" type="object" class="oe_stat_button" icon="fa-align-justify">
                            </button>
                            <button string="GSK Practical Marksheet" attrs="{'invisible': [('gsk_visiblity', '=', False)]}" name="open_gsk_practical_sheet" type="object" class="oe_stat_button" icon="fa-align-justify">
                            </button>
                        </div>
                        <group style="width:50%;">
                            <!-- <field name="exam_schedule_id" /> -->
                            <field name="partner_id" />
                            <field name="name" />
                            <field name="mek_visiblity" invisible="1" />
                            <field name="gsk_visiblity" invisible="1" />
                            
                        </group >
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name= "message_ids" widget="mail_thread"/>
                        <field name= "activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="assign_examiner_wizard_form" model="ir.ui.view">
            <field name="name">assign.examiner.wizard.form</field>
            <field name="model">assign.examiner.wizard</field>
            <field name="arch" type="xml">
                <form >
                    <group>
                        <field name="course" invisible="1"/>
                        <field name="state_id" invisible="1"/>
                        <field name="examiners" widget="many2many_tags" options="{'no_create_edit': True}" domain="[('state_id', '=', state_id)]" />
                    </group>

                    <footer>
                        <button name="assign_examiner" string="Assign Examiner" type="object" class="btn-primary"/>
                        <!-- <button string="Cancel" class="btn-secondary" special="cancel"/> -->
                    </footer>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name= "message_ids" widget="mail_thread"/>
                        <field name= "activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="assign_examiner_wizard_action" model="ir.actions.act_window">
            <field name="name">Assign Examiners</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">assign.examiner.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="assign_examiner_wizard_form"/>
            <field name="target">new</field>
        </record>

        <!-- END Exam Schedule -->
    </data>
