<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        
        <!-- Institute Batches -->

        <record id="batch_form" model="ir.ui.view">
            <field name="name">institute.batches.form</field>
            <field name="model">institute.batches</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group style="width:100%;">
                            <h1>
                                <field name="batch_name" placeholder="Batch Name"/>
                            </h1>
                        </group>
                        <group style="width:50%;">
                            <field name="institute_id" options="{'no_create':True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="batch_tree" model="ir.ui.view">
            <field name="name">institute.batches.tree</field>
            <field name="model">institute.batches</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="batch_name"/>
                    <field name="institute_id"/>
                </tree>
            </field>
        </record>

        <!-- END  Institute Batches -->


        <!-- BES Batches -->


        <record id="bes_institute_batch_action" model="ir.actions.act_window">
            <field name="name">Schedules</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bes.batches</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Schedules</p>
            </field>
        </record>



        <record id="bes_batch_form" model="ir.ui.view">
            <field name="name">bes.batches.form</field>
            <field name="model">bes.batches</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group style="width:100%;">
                            <h1>
                                <field name="schedule_name" placeholder="Schedule Name"/>
                            </h1>
                        </group>
                        <group style="width:100%;">
                            <field name="exam_date"/>
                        </group>
                        <group style="width:50%;">
                            <field name="course"/>
                        </group>
                         <group style="width:50%;">
                            <field name="exam_center"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="batch_tree" model="ir.ui.view">
            <field name="name">bes.batches.tree</field>
            <field name="model">bes.batches</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="schedule_name"/>
                </tree>
            </field>
        </record>

        <!-- END BES Batches -->



    </data>
</odoo>