<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_candidates_remark_form" model="ir.ui.view">
        <field name="name">candidates.remark.form</field>
        <field name="model">candidates.remark</field>
        <field name="arch" type="xml">
            <form string="Candidates Remark">
                <sheet>
                    <group>
                        <field name="name"/>
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_candidates_remark_tree" model="ir.ui.view">
        <field name="name">candidates.remark.tree</field>
        <field name="model">candidates.remark</field>
        <field name="arch" type="xml">
            <tree string="Candidates Remarks">
                <field name="name"/>
               
            </tree>
        </field>
    </record>
    <record id="action_candidates_remark" model="ir.actions.act_window">
        <field name="name">Candidates Remarks</field>
        <field name="res_model">candidates.remark</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_candidates_remark" name="Candidates Remarks"
              action="action_candidates_remark" parent="menu_iv_candidats_application"/>


    </data>
</odoo>