<odoo>
    <template id="candidate_admit_card_gp">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <!-- <t t-call="web.html_container"> -->
                
                    <div class="header">
                        <div class="container" style="text-align: center; font-size: 24px;  margin:0; margin-bottom: 10px;">
                            <img class="img img-responsive img-top" t-attf-src="/bes/static/src/img/logo_bes.jpg" style=" width: 50px; height:50px;"/> 
                            <strong>Board of Examinations for Seafarers Trust</strong>
                        </div>
                        <div style="text-align: center; font-size: 22px; margin-bottom: 10px;">
                            <t t-if="attempt_number == 1">
                                <strong>Admit Card - GP Fresh Candidate</strong>
                            </t>
                            <t t-else="">
                                <strong>Admit Card - GP Repeater Candidate</strong>
                            </t>
                        </div>
                        <div style="font-size: 20px; text-align: center; margin-bottom: 10px;">
                            <strong>Exam Center: <span><t t-esc="o.registered_institute.name"/></span></strong>
                        </div>
                    
                    </div>

                    <div class="container" style="position:relative; margin:0;">
                        <img t-attf-src="data:image/png;base64,{{o.gp_candidate.candidate_image}}" alt="Image" id="photo" class="img img-responsive" style="width: 125px; height: 150px; position: absolute; top: 0px; right: 15px;"/>
                        <t t-if="o.gp_candidate.candidate_signature">
                            <img t-attf-src="data:image/png;base64,{{o.gp_candidate.candidate_signature}}" style="width: 250px; height: 50px; position: absolute; top: 175px; right: 8px;" />
                        </t>
                    </div>

                    <div class="container" style="margin:0;">
                        <div class="row" style="padding-left:9px; margin-bottom:15px ; ">
                            <div class="col-6">
                                <span style="font-size:20px; margin-right:8px;">Examination: </span>
                                <span style="font-size:20px;">
                                    <t t-set="formatted_dob" t-value="o.dgs_batch.to_date.strftime('%b-%y')" />
                                    <t t-esc="formatted_dob" />
                                </span>  
                            </div>
                        </div>
                        <div class="row" style="padding-left:9px; margin-bottom:15px ; ">
                            <div class="col-12">
                                <span style="font-size:20px; margin-right:8px;">Name as in INDOS:</span>
                                <span style="font-size:20px;"><t t-esc="o.gp_candidate.name"/></span>  
                            </div>
                        </div>
                        
                        <div class="row" style="padding-left:9px; margin-bottom:15px;">
                            <div class="col-6">
                                <span style="font-size:20px; margin-right:8px;">DOB as in INDOS: </span>
                                <span style="font-size:20px;"><t t-esc="o.gp_candidate.dob"/></span>  
                            </div>
                        </div>
                        
                        <div class="row" style="padding-left:9px; margin-bottom:15px;">
                            <div class="col-6">
                                <span style="font-size:20px; margin-right:8px;">INDOs No: </span>
                                <span style="font-size:20px;"><t t-esc="o.gp_candidate.indos_no"/></span>  
                            </div>
                        </div>
                        
                        <div class="row" style="padding-left:9px; margin-bottom:15px;">
                            <div class="col-6">
                                <span style="font-size:20px; margin-right:8px;">Code No: </span>
                                <span style="font-size:20px;"><t t-esc="o.gp_candidate.candidate_code"/></span>  
                            </div>
                        </div>
                        
                        <div class="row" style="padding-left:9px; margin-bottom:15px;">
                            <div class="col-6">
                                <span style="font-size:20px; margin-right:8px;">Roll No: </span>
                                <span style="font-size:20px;"><t t-esc="o.exam_id"/></span>  
                            </div>
                        </div>
                    </div>

                    <div class="container" style="position:relative; margin:0;">
                        <t t-if="o.qr_code">
                            <img t-attf-src="data:image/png;base64,{{o.qr_code}}" style="width: 120px; height: 120px; position:absolute; top: 0; right:8px;" />
                        </t>
                    </div>

                    
                    <div style="width: 100%; margin:0; text-align:center;">
                        <table style="width: 35%; margin: 0 0; text-align:center; border-collapse: collapse; border: 1px solid #ddd;">
                            <thead>
                                <tr style="">
                                    <th style="width: 50%; padding: 10px;"><strong>Attempting Exam</strong></th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                              
                                <tr t-if="o.gsk_oral_prac_status == 'pending' or o.gsk_oral_prac_status == 'failed'">
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;">Gsk Oral/Practical</td>
                                   
                                </tr>
                                <tr t-if="o.gsk_online_status == 'pending' or o.gsk_online_status == 'failed'">
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;">Gsk Online</td>
                                   
                                </tr>
                                <tr t-if="o.mek_oral_prac_status == 'pending' or o.mek_oral_prac_status == 'failed'">
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;">Mek Oral/Practical</td>
                                    
                                </tr>
                                <tr t-if="o.mek_online_status == 'pending' or o.mek_online_status == 'failed'">
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;">MeK Online</td>
                                    
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="container" style="text-align:center; margin:0; margin-top:20px; ">
                        <div class="row">
                            <div class="col-12">
                                <img class="img img-responsive" t-attf-src="/bes/static/src/img/Ravindra_Nath_tripathi-NoBg_Sign.png" alt="" style="width: 130px; height: 75px;"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span style="font-size:22px; font-weight:900; font-family: 'TimesNewRomanBold';">Ravindra Nath Tripathi</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12" style="height:max-content;">
                                <span style="font-size:22px; font-family:'TimesNewRoman'; font-weight:light; ">Marine Engineering Officer</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <span style="font-size:20px; font-weight:900;">Board of Examinations for Seafarers Trust</span>
                            </div>
                        </div>
                    </div>
                <!-- </t> -->
            </t>
        </t>
    </template>
</odoo>
