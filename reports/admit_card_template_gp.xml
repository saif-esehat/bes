<odoo>
    <template id="candidate_admit_card_gp">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.html_container">
                    <!-- Your content here -->
                    <div style="text-align: center; font-size: 24px; margin-bottom: 10px;">
                        <strong>BOARD OF EXAMINATIONS FOR SEAFARERS TRUST</strong>
                    </div>
                    <div style="text-align: center; font-size: 22px; margin-bottom: 10px;">
                        <strong>ADMIT CARD - GP Fresh</strong>
                    </div>
                    <div style="font-size: 20px; text-align: center; margin-bottom: 10px;">
                        <strong>Exam Center: <span><t t-esc="o.institute_name.name"/></span></strong>
                    </div>
                    <div style="position: relative;">
                        <!-- Candidate Image -->
                        <t t-if="o.gp_candidate.candidate_image">
                            <img t-attf-src="data:image/png;base64,{{o.gp_candidate.candidate_image}}" style="width: 150px; height: 150px; position: absolute; top: 10%; right: 8px;" />
                        </t>
                        <!-- Candidate Details  position: absolute; top: 10%; left: 3%; -->
                        <div style="margin-top:2rem">
                            <table style="width: 100%; text-align: left;">
                                <!-- Exam Information -->
                                <tr>
                                    <td colspan="6">
                                        <div style="font-size: 20px; font-weight: bold; margin-bottom: 8px;">
                                            <strong>Examination: June 2022</strong>
                                        </div>
                                    </td>
                                </tr>
                                <!-- Roll No, Name, DOB -->
                                <tr>
                                    <td colspan="6">
                                        <div style="font-size: 20px; font-weight: bold; margin-bottom: 5px;">
                                            <strong>Roll No: <span t-esc="o.gp_candidate.roll_no"/></strong>
                                        </div>
                                        <div style="font-size: 20px; font-weight: bold; margin-bottom: 8px;">
                                            <strong>Name as in INDOS: <span t-esc="o.gp_candidate.name"/></strong>
                                        </div>
                                        <div style="font-size: 20px; font-weight: bold; margin-bottom: 5px;">
                                            <strong>DOB as in INDOS: <span t-esc="o.gp_candidate.dob"/></strong>
                                        </div>
                                    </td>
                                </tr>
                                <!-- INDOS No, Candidate Code -->
                                <tr>
                                    <td colspan="6">
                                        <div style="font-size: 20px; font-weight: bold; margin-bottom: 8px;">
                                            <strong>INDOs No: <span t-esc="o.gp_candidate.indos_no"/></strong>
                                        </div>
                                        <div style="font-size: 20px; font-weight: bold; margin-bottom: 8px;">
                                            <strong>Code No: <span t-esc="o.gp_candidate.candidate_code"/></strong>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- Table for Attempting Exams and Status -->
                   <div style="width: 100%; margin-top: 0; text-align:center;">
                        <table style="width: 60%; margin: 0 auto; text-align:center; border-collapse: collapse; border: 1px solid #ddd;">
                            <thead>
                                <tr style="background-color: #f2f2f2;">
                                    <th style="width: 50%; padding: 10px;"><strong>Attempting Exam</strong></th>
                                    <th style="width: 50%; padding: 10px;"><strong>Status</strong></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Rows for each exam and status -->
                                <tr t-if="o.gsk_oral_prac_status == 'pending'">
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;">Gsk Oral/Practical</td>
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;" t-esc="o.gsk_oral_prac_status"/>
                                </tr>
                                <tr t-if="o.gsk_online_status == 'pending'">
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;">Gsk Online Status</td>
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;" t-esc="o.gsk_online_status"/>
                                </tr>
                                <tr t-if="o.mek_oral_prac_status == 'pending'">
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;">Mek Oral/Practical</td>
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;" t-esc="o.mek_oral_prac_status"/>
                                </tr>
                                <tr t-if="o.mek_online_status == 'pending'">
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;">MeK Online Status</td>
                                    <td style="width: 50%; padding: 10px; border: 1px solid #ddd;" t-esc="o.mek_online_status"/>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                    <table style="width: 100%; text-align: left;">
                        <tr>
                            <td style="font-size: 20px; font-weight: bold; position: absolute; top: 23%; right: 8px;">
                                <strong>Signature of the Candidate</strong>
                            </td>
                            <td>
                                <t t-if="o.gp_candidate.candidate_signature">
                                    <img t-attf-src="data:image/png;base64,{{o.gp_candidate.candidate_signature}}" style="width: 270px; height: 55px; border: 2px dotted #000; position: absolute; top: 25%; right: 8px;" />
                                </t>
                            </td>
                        </tr>
                        <tr>
                            <!-- Empty row for spacing -->
                        </tr>
                        <tr>
                            <td style="font-size: 17px; font-weight: bold; position: absolute; top: 31%; right: 8px;">
                                <strong>Please Sign within the box</strong>
                            </td>
                        </tr>
                    </table>

                    <div style="margin-top: 50px; position: relative;">
                        <div style="position: absolute; top: 40%; left: 30%; width: 42%;">
                            <div>
                                <b>Capt Harsh Khatri</b>
                            </div>
                            <div style="height: 20px"></div>
                            <div>
                                <b style="text-align: center">Chief Executive Officer</b>
                            </div>
                            <div>
                                <b style="text-align: left">For Board of Examinations for Seafarers Trust</b>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
