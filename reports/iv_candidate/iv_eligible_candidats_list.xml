<?xml version="1.0" encoding="utf-8"?>
<odoo>

 <report
        id="reports_iv_eligible_candidate"
        string="IV  Eligible Candidate List"
        model="candidates.application"
        report_type="qweb-pdf"
        name="bes.reports_iv_eligible_candidate_list"
        file="bes.reports_iv_eligible_candidate_list"/>



<template id="reports_iv_eligible_candidate_list">
    <t t-call="web.basic_layout">
            <div class="page">

               
                <div class="header">
                    <table style="width: 100%; table-layout: fixed; border-collapse: collapse;">
                          <h5 style="text-align: center; font-weight: bold;">
                                    Board of Examinations for Seafarers Trust (BES), Navi Mumbai.
                            </h5>
                            
                            <!-- Second Line -->
                            <h6 style="text-align: center; font-weight: bold; margin-top: 10px;">
                                Final List of Eligible Candidates 
                            </h6>
                
                    </table>
                </div>

                <table  style="width: 100%; border-collapse: collapse; margin-top: 5px;">
       
                <thead>
							
                    <tr style="background-color: #d3d3d3; color: black;">
                                <td colspan="1" style="border: 1px solid black; border-bottom:none; text-align: center; font-weight: bold ; width: 5%; ">Sr no</td>
                                <td colspan="1" style="border: 1px solid black; border-bottom:none; text-align: center; font-weight: bold; width: 5%; ">Indos No</td>
                                <td colspan="1" style="border: 1px solid black; border-bottom:none; text-align: center; font-weight: bold;  width: 10%; ">Application form Number</td>
                                <td colspan="1" style="border: 1px solid black; border-bottom:none; text-align: center; font-weight: bold;  width: 10%; ">Grade Applied </td>
                                <td colspan="1" style="border: 1px solid black; border-bottom:none; text-align: center; font-weight: bold;  width: 10%; ">Name </td>
                                <td colspan="1" style="border: 1px solid black; border-bottom:none; text-align: center; font-weight: bold;  width: 10%; ">D.O.B </td>
                                <td colspan="2" style="border: 1px solid black; text-align: center; font-weight: bold; width: 20%; ">Reporting at BES office for Documents Verification</td>
                               
                            </tr>
                            <tr style="background-color: #d3d3d3; color: black;">
                                <td colspan="1" style="border: 1px solid black; border-top:none;"></td>
                                <td colspan="1" style="border: 1px solid black; border-top:none;"></td>
                                <td colspan="1" style="border: 1px solid black; border-top:none;"></td>
                                <td colspan="1" style="border: 1px solid black; border-top:none;"></td>
                                <td colspan="1" style="border: 1px solid black; border-top:none;"></td>
                                <td colspan="1" style="border: 1px solid black; border-top:none;"></td>
                                <td colspan="1" style="border: 1px solid black; text-align: center; font-weight: bold; width: 10%; ">Date</td>
                                <td colspan="1" style="border: 1px solid black; text-align: center; font-weight: bold; width: 10%; ">Time</td>
                            </tr>
							
						</thead>
                <tbody>
                        <t t-set="index" t-value="0" />
                        <t t-foreach="docs" t-as="eligible">
                            <t t-set="index" t-value="index + 1" />
                            <tr>
                                <td colspan="1" style="border: 1px solid black; padding: 6px; text-align: center; vertical-align: middle;">
                                    <span t-esc="index" />
                                </td>
                                <td  colspan="1" style="border: 1px solid black; padding: 6px; text-align: center; vertical-align: middle;">
                                    <span t-field="eligible.indos_no" />
                                </td>
                                <td  colspan="1" style="border: 1px solid black; padding: 6px; text-align: center; vertical-align: middle;">
                                    <span t-field="eligible.application_no" />
                                </td>
                                <td colspan="1"  style="border: 1px solid black; padding: 6px; text-align: center; vertical-align: middle;">
                                    <span t-field="eligible.grade" />
                                </td>
                                <td  colspan="1" style="border: 1px solid black; padding: 6px;  vertical-align: middle;">
                                    <span t-field="eligible.name" />
                                </td>
                                <td colspan="1"  style="border: 1px solid black; padding: 6px; text-align: center; vertical-align: middle;">
                                    <span t-esc="eligible.dob.strftime('%d-%m-%Y')" />
                                </td>
                                <td colspan="1" style="border: 1px solid black; padding: 6px; text-align: center; vertical-align: middle;">
                                    <t t-if="eligible.reporting_date">
                                    <span t-esc="eligible.reporting_date.strftime('%d-%m-%Y')" />
                                    </t>
                                    <t t-if="not eligible.reporting_date">
                                            <!-- Empty cell if reporting_time is not available -->
                                        </t>
                                </td>
                                <td colspan="1" style="border: 1px solid black; padding: 6px; text-align: center; vertical-align: middle;">
                                        <t t-if="eligible.reporting_time">
                                            <span t-esc="str(eligible.reporting_time) + ' hrs.'"/>
                                        </t>
                                        <t t-if="not eligible.reporting_time">
                                            <!-- Empty cell if reporting_time is not available -->
                                        </t>
                                    </td>
                            </tr>
                           
                               
             
                        </t>
                    </tbody>
            </table>
           
            </div>
        </t>
</template>


</odoo>