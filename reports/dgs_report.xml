                                    </t>

                                    <t t-if="exam.cookery_gsk_online_carry_forward">
                                        <td style="text-align:center;color: green;"><strong>AP</strong></td>
                                    </t>
                                    <t t-elif="exam.ccmc_online_status == 'passed'">
                                        <td style="text-align:center"><strong>P</strong></td>
                                    </t>
                                    <t t-else="">
                                        <td style="text-align: center; color: red;"><strong>F</strong></td>
                                    </t>

                                    <t t-if="exam.exam_criteria == 'passed'">
                                        <td style="text-align:center"><strong>PASS</strong></td>
                                    </t>
                                    <t t-else="">
                                        <td style="text-align: center; color: red;"><strong>FAIL</strong></td>
                                    </t>  
                                </tr>
                            </t>
                        </tbody>
                    </table>
                
                </t>
            </t>

            
        </t>
    </template>
</odoo>
